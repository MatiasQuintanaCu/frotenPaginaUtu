# Archivo: public/.htaccess
<IfModule mod_rewrite.c>
    # Activa el módulo de reescritura
    RewriteEngine On

    # Si la ruta solicitada es un archivo o directorio existente, no hacer nada (ej: /assets/style.css)
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d

    # Redirige todo lo demás a index.php. La bandera [L] significa "última regla"
    RewriteRule ^(.*)$ index.php [L]
</IfModule>